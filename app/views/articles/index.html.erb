<div class="container">

<div class="navbar bg-light d-flex justify-content-between">
  <div class="container-fluid shadow-sm p-3">
    <h4 class="p-3 text-start">Wikinimous</h4>
  <%= link_to 'Add a new article', new_article_path,  class: 'logo text-end' %>
  </div>
</div>

<div class="list text-center">
  <ul>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article_path(article) do  %>
      <h2><%= article.title  %></h2>
      <% end %>
      <p><%= truncate(article.content, :length => 80) %></p>
    </li>
   <% end %>
</ul>
</div>

</div>
