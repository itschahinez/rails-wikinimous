<%= link_to 'Add a new article', new_article_path %>
<h1>Wikinimous</h1>

<ul>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article_path(article) do  %>
      <h2><%= article.title  %></h2>
      <% end %>
      <p><%= truncate(article.content, :length => 80) %></p>
    </li>
   <% end %>
</ul>
